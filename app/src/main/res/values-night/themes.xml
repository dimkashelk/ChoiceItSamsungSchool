<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChoiceItSamsungSchool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_100</item>
        <item name="colorPrimaryVariant">@color/purple_300</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <item name="colorSurface">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="colorAccent">@color/purple_100</item>
    </style>

    <style name="Base.TextAppearance.MaterialComponents.Button.Outline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/purple_200</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="tabIndicatorColor">@color/purple_400</item>
        <item name="tabRippleColor">@color/purple_200</item>
        <item name="tabSelectedTextColor">@color/purple_400</item>
        <item name="tabTextColor">@color/purple_100</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="itemIconTint">@color/purple_300</item>
        <item name="itemRippleColor">@color/purple_100</item>
        <item name="itemIconSize">27dp</item>
    </style>

    <style name="FrontBackdropBackground">
        <item name="android:background">@drawable/bottom_sheet_background_night</item>
    </style>

    <style name="ToolBar">
        <item name="android:backgroundTint">@color/dark_grey</item>
    </style>

    <style name="PageBackgroundColor">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="colorPrimaryContainer">@color/purple_300</item>
        <item name="hintTextColor">@color/purple_100</item>
        <item name="errorTextColor">@color/purple_100</item>
    </style>

    <style name="OutlineButton" parent="Base.TextAppearance.MaterialComponents.Button.Outline">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/purple_300</item>
        <item name="cornerRadius">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="FillButton">
        <item name="backgroundTint">@color/purple_300</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@android:color/transparent</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/purple_400</item>
        <item name="cornerRadius">15dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FillButton.LoadingButton" parent="FillButton">
        <item name="android:backgroundTint">@color/purple_300</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateTint">@color/purple_300</item>
    </style>

    <style name="FriendCardButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">@color/purple_400</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="chipBackgroundColor">@color/chip_background_selector_dark</item>
        <item name="textFillColor">@color/chip_text_color_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="useMaterialThemeColors">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_grey</item>
    </style>

    <style name="FillButton.CardView" parent="FillButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>